@using EntityModels
@model IEnumerable<ViewModels.CustomerViewModel>
@{
    ViewBag.Title = "NhanVien";
    Layout = "~/Views/Shared/_Layout_Manager.cshtml";
    ViewBag.Quantity++;
}
<h2>Khách hàng</h2>
<a href="Customers/Create" class="btn btn-warning">Thêm</a>
<table class="table table-bordered table-hover" style="margin-top:20px; background-color:white; border-radius:10px">
    <thead>
        <tr>
            <th>STT</th>
            <th>Mã số khách hàng</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>Tổng đơn hàng đã mua</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">0@(ViewBag.Quantity++)</td>
                <td class="text-center">@Html.DisplayFor(p => item.MaKhachHang)</td>
                <td>@Html.DisplayFor(p => item.HoTenKhachHang)</td>
                <td class="text-center">@Html.DisplayFor(p => item.NgaySinh)</td>
                <td class="text-center">@Html.DisplayFor(p => item.DiaChi)</td>
                <td class="text-center">@Html.DisplayFor(p => item.DanhSachHoaDon)</td>
                <td>
                    <a href="/Customers/Edit/@item.MaKhachHang" class="btn btn-info" style="margin-right:10px">Sửa</a>
                    <a href="/Customers/Delete/@item.MaKhachHang" id="delete" class="btn btn-danger">Xóa</a>
                </td>
                @*<td>
                        <a href="/Student/Edit/@item.MaKhachHang" class="btn btn-danger" style="margin-right:10px">Sửa</a>
                        <a href="/Student/Delete/@item.MaKhachHang" id="delete" class="btn btn-info">Xóa</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>


