@using EntityModels
@model IEnumerable<ViewModels.CategoryViewModel>
@{
    ViewBag.Title = "NhanVien";
    Layout = "~/Views/Shared/_Layout_Manager.cshtml";
    ViewBag.Quantity++;
}
<h2>Loại xe</h2>
<a href="Category/Create" class="btn btn-warning">Thêm</a>
<table class="table table-bordered table-hover" style="margin-top:20px; background-color:white; border-radius:10px">
    <thead>
        <tr>
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Mã loại xe</th>
            <th style="text-align:center">Tên loại xe</th>
            <th style="text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">0@(ViewBag.Quantity++)</td>
                <td class="text-center">@Html.DisplayFor(p => item.MaLoaiXe)</td>
                <td>@Html.DisplayFor(p => item.TenLoaiXe)</td>
                <td class="text-center">
                    <a href="Edit/@item.MaLoaiXe" class="btn btn-info" style="margin-right:10px">Sửa</a>
                    <a href="Delete/@item.MaLoaiXe" id="delete" class="btn btn-danger">Xóa</a>
                </td>
               
            </tr>
        }
    </tbody>
</table>


